{
  "schemaVersion": 1,
  "id": "${id}",
  "version": "${version_base}",


  "name": "${name}",
  "description": "Dragon Mod for Minecraft Fabric 1.19.x",


  "authors": [
    "Totobird Creations",
    "Balec"
  ],
  "contact": {
    "homepage": "https://github.com/Totobird-Creations/",
    "sources": "https://github.com/Totobird-Creations/DragonHeart-Mod",
    "issues": "https://github.com/Totobird-Creations/DragonHeart-Mod/issues"
  },


  "license": "MIT",
  "icon": "assets/${id}/icon.png",


  "environment": "*",
  "entrypoints": {
    "main": [
      "net.totobirdcreations.dragonheart.DragonHeart"
    ],
    "client": [
      "net.totobirdcreations.dragonheart.client.Client"
