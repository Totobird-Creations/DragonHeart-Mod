    "modmenu": {
      "links": {
        "modmenu.discord"         : "https://discord.gg/fdfD4YkPcF",
        "modmenu.wiki"            : "https://github.com/Totobird-Creations/DragonHeart-Mod/wiki",
        "modmenu.github_releases" : "https://github.com/Totobird-Creations/DragonHeart-Mod/releases",
